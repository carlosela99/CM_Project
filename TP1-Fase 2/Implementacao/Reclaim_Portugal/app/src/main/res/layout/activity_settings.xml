<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_menu"
    tools:context=".Settings">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     tools:layout_editor_absoluteX="-44dp"
     tools:layout_editor_absoluteY="0dp">


     <ImageButton
             android:id="@+id/back"
             android:layout_width="67dp"
             android:layout_height="94dp"
             android:background="@drawable/back"
             android:layout_marginStart="10dp"
             android:layout_marginTop="0dp"
             android:scaleType="fitXY"

         />

     <ImageView
             android:id="@+id/settingsLogo"
             android:layout_width="40dp"
             android:layout_height="40dp"
             app:srcCompat="@drawable/settings32px"
             android:layout_marginStart="110dp"
             android:layout_marginTop="-50dp"
             />

     <TextView
             android:id="@+id/settingsText"
             android:layout_width="183dp"
             android:layout_height="40dp"
             android:layout_marginStart="160dp"
             android:layout_marginTop="-43dp"
             android:text="SETTINGS"
             android:textSize="30dp"
             android:textStyle="bold"
             android:typeface="serif" />






      <ImageButton
      android:id="@+id/PortugalIcon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      app:srcCompat="@drawable/portugal"
      android:layout_marginStart="150dp"
      android:layout_marginTop="50dp"
      android:background="@android:color/transparent"

      />
     <ImageButton
         android:id="@+id/reinoUnido"
         android:layout_width="64dp"
         android:layout_height="64dp"
         app:srcCompat="@drawable/"
         android:layout_marginStart="250dp"
         android:layout_marginTop="-63dp"
         android:background="@android:color/transparent"
         />

     <ImageButton
         android:id="@+id/music"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:srcCompat="@drawable/music"
         android:layout_marginStart="150dp"
         android:layout_marginTop="20dp"
         android:background="@android:color/transparent"/>



     <TextView
         android:id="@+id/creditos"
         android:layout_width="260dp"
         android:layout_height="110dp"
         android:text="                    OUR TEAM:                            Carlos Antunes      Jorge Mimoso      Daniel Morais        Marco Teodoro Eduardo Ferreira  Ricardo Ribeiro"
         android:fontFamily="@font/candy_beans"
         android:layout_marginStart="440dp"
         android:layout_marginTop="20dp"
        />

     <Button
         android:id="@+id/changePass"
         android:layout_width="208dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="120dp"
         android:layout_marginTop="-100dp"
         android:text="@string/change_password"
         app:cornerRadius="30dp"
         app:backgroundTint="#E10C0C"

         />

     <ImageButton
         android:id="@+id/imageButton2"
         android:layout_width="64dp"
         android:layout_height="64dp"
         app:srcCompat="@drawable/mute"
         android:background="@android:color/transparent"
         android:layout_marginStart="250dp"
         android:layout_marginTop="-142dp"
         />

 </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

