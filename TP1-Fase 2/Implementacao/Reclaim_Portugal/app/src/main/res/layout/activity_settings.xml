<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_menu"
    tools:context=".Settings">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="13">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="140">
                    <ImageButton
                        android:id="@+id/menuSettingsBack"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/back"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="23">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="31">
                            <ImageView
                                android:id="@+id/settingsLogo"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="30dp"
                                app:srcCompat="@drawable/settingslogo" />
                            <TextView
                                android:id="@+id/settingsText"
                                android:layout_width="183dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="70dp"
                                android:layout_marginTop="34dp"
                                android:fontFamily="@font/candy_beans"
                                android:text="@string/settingsname"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                 />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="15">

                        </RelativeLayout>




                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="100">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="23">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="30">
                            <ImageButton
                                android:id="@+id/PortugalIcon"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="24dp"
                                android:background="@android:color/transparent"

                                app:srcCompat="@drawable/portugal" />

                            <ImageButton
                                android:id="@+id/musicIcon"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="86dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:srcCompat="@drawable/music" />

                            <ImageButton
                                android:id="@+id/reinoUnido"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginStart="100dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/reino_unido" />

                            <ImageButton
                                android:id="@+id/muteIcon"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginStart="100dp"
                                android:layout_marginTop="86dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/mute" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="15">

                        </RelativeLayout>




                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="20">
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="12">
                                    <Button
                                        android:id="@+id/btnChangePassword"
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:text="@string/change_password"
                                        app:backgroundTint="#E10C0C"
                                        android:layout_marginTop="40dp"
                                        app:cornerRadius="20dp"
                                         />
                                </RelativeLayout>
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="40">
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="12">
                                    <TextView
                                        android:id="@+id/ourteamview"
                                        android:layout_marginStart="50dp"
                                        android:layout_marginTop="40dp"
                                        android:layout_width="114dp"
                                        android:layout_height="20dp"
                                        android:fontFamily="@font/candy_beans"
                                        android:text="@string/ourTeam"
                                        android:textColor="@color/white" />
                                    <TextView
                                        android:id="@+id/nomesEsquerda"
                                        android:layout_width="128dp"
                                        android:layout_height="70dp"
                                        android:layout_marginTop="60dp"
                                        android:fontFamily="@font/candy_beans"
                                        android:text="@string/LeftNames"
                                        android:textColor="@color/white"
                                         />

                                    <TextView
                                        android:id="@+id/nomesDireita"
                                        android:layout_width="109dp"
                                        android:layout_height="70dp"
                                        android:layout_marginStart="130dp"
                                        android:layout_marginTop="60dp"
                                        android:fontFamily="@font/candy_beans"
                                        android:text="@string/rightNames"
                                        android:textColor="@color/white"
                                         />
                                        />
                                </RelativeLayout>
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




