<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_menu"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-44dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnchange"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="300dp"
            android:text="@string/change_password"
            app:backgroundTint="#E10C0C"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/Credits"
            android:layout_width="239dp"
            android:layout_height="110dp"
            android:layout_marginStart="440dp"
            android:layout_marginTop="-60dp"
            android:text="                    OUR TEAM:                            Carlos Antunes      Jorge Mimoso    Daniel Morais        Marco Teodoro Eduardo Ferreira  Ricardo Ribeiro"

            android:typeface="serif" />


        <ImageButton
            android:id="@+id/PortugalIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="-300dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/portugal"

            />

        <ImageButton
            android:id="@+id/muteIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/mute" />

        <ImageButton
            android:id="@+id/musicIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="-65dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/music" />

        <ImageButton
            android:id="@+id/reinoUnido"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="-150dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/leftArrow"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-150dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/arrow" />

        <ImageView
            android:id="@+id/settingsLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="-40dp"
            app:srcCompat="@drawable/settings32px" />

        <TextView
            android:id="@+id/settingsText"
            android:layout_width="183dp"
            android:layout_height="40dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="-40dp"
            android:text="SETTINGS"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="serif" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

