<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_main_menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="157dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="67dp"
                android:layout_height="94dp"
                android:background="@drawable/back"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/mainmenu"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="-100dp"
            android:layout_marginStart="120dp"
            android:text="Main Menu"
            app:cornerRadius="20dp"
            app:backgroundTint="#E10C0C"
            />

        <TextView
            android:id="@+id/confirmation"
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-250dp"
            android:typeface="serif"
            android:text="your password has been changed succefully.            Next time,you can use your new password to login into the game"
            android:fontFamily="@font/candy_beans"
            />
        <TextView
            android:id="@+id/confirmationPass"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-140dp"
            android:typeface="serif"
            android:text="Password was changed"
            android:fontFamily="@font/candy_beans"
 />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>