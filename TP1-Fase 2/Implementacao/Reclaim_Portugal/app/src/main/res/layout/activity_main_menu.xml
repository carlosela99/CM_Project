<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_menu"
    tools:context=".MainMenu">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/Theme.ReclaimPortugal.AppBarOverlay"/>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="177dp"
        android:layout_height="67dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="315dp"
        android:fontFamily="@font/candy_beans"
        android:text="@string/play"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:backgroundTint="#ECE63A"
        app:cornerRadius="30dp"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />


    <Button
        android:id="@+id/btnQuestion"
        android:layout_width="272dp"
        android:layout_height="67dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="315dp"
        android:fontFamily="@font/candy_beans"
        android:text="@string/question"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:backgroundTint="#FE9823"
        app:cornerRadius="30dp"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="68dp"
        android:layout_height="72dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="15dp"
        android:layout_marginStart="100dp"
    />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="36dp"
        android:layout_marginStart="100dp"
    />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="54dp"
        android:layout_height="58dp"
        android:layout_marginStart="670dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/settings"
        android:background="@android:color/transparent"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>