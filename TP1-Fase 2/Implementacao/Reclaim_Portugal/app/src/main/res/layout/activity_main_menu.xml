<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_menu"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/constraintLayout"
        app:layout_anchorGravity="center">

        <ImageButton
            android:id="@+id/settings_icon"
            android:layout_width="53dp"
            android:layout_height="56dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/settings"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/settings" />

        <ImageButton
            android:id="@+id/player_icon"
            android:layout_width="91dp"
            android:layout_height="89dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pastel_icon" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/player_icon"
            app:layout_constraintTop_toTopOf="@+id/player_icon" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/username"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/player_icon"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <Button
            android:id="@+id/btnQuestion"
            android:layout_width="272dp"
            android:layout_height="67dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/candy_beans"
            android:text="@string/question"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:backgroundTint="#FE9823"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.918"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="177dp"
            android:layout_height="67dp"
            android:layout_marginStart="100dp"
            android:fontFamily="@font/candy_beans"
            android:text="@string/play"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:backgroundTint="#ECE63A"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnQuestion"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.918"
            app:strokeColor="#000000"
            app:strokeWidth="3dp" />

        <ImageView
            android:id="@+id/trophy_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="136dp"
            app:layout_constraintStart_toStartOf="@+id/friends_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/trophy" />

        <ImageView
            android:id="@+id/friends_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trophy_icon"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/friends" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="136dp"
            app:layout_constraintEnd_toEndOf="@+id/wrong_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/right" />

        <ImageView
            android:id="@+id/wrong_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="348dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/right_icon"
            app:srcCompat="@drawable/wrong" />

        <ImageView
            android:id="@+id/separator_icon"
            android:layout_width="5dp"
            android:layout_height="110dp"
            app:layout_constraintBottom_toBottomOf="@+id/friends_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/right_icon"
            app:srcCompat="@drawable/separator" />

        <TextView
            android:id="@+id/trophies_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/trophy_icon"
            app:layout_constraintEnd_toStartOf="@+id/separator_icon"
            app:layout_constraintStart_toEndOf="@+id/trophy_icon"
            app:layout_constraintTop_toTopOf="@+id/trophy_icon" />

        <TextView
            android:id="@+id/friends_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/friends_icon"
            app:layout_constraintEnd_toStartOf="@+id/separator_icon"
            app:layout_constraintStart_toEndOf="@+id/friends_icon"
            app:layout_constraintTop_toTopOf="@+id/friends_icon" />

        <TextView
            android:id="@+id/right_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/right_icon"
            app:layout_constraintEnd_toStartOf="@+id/right_icon"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/separator_icon"
            app:layout_constraintTop_toTopOf="@+id/right_icon"
            app:layout_constraintVertical_bias="0.476" />

        <TextView
            android:id="@+id/wrong_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/wrong_icon"
            app:layout_constraintEnd_toStartOf="@+id/wrong_icon"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/separator_icon"
            app:layout_constraintTop_toTopOf="@+id/wrong_icon"
            app:layout_constraintVertical_bias="0.476" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>